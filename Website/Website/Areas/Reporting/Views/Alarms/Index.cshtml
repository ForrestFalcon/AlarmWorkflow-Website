@model IEnumerable<AlarmWorkflow.Shared.Core.Operation>
@using AlarmWorkflow.Shared.Core

@{
    ViewBag.Title = "Alarmübersicht";
}

<h2>@ViewBag.Title</h2>

<p>
    Auf dieser Seite können Sie alle bisherigen Alarme ansehen.
</p>
<table>
    <tr>
        <th>Zeitpunkt</th>
        <th>Bemerkung</th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
           <b>@item.TimestampIncome</b>
        </td>
        <td>
           <b title="@item.Comment">@item.Comment.Truncate(64)</b>
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { item.Id })
        </td>
    </tr>
}
</table>

<p><b>Anzahl Alarme: </b>@Model.Count()</p>
